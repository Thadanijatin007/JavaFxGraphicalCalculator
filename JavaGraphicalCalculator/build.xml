<project name="chem" default="compile" basedir=".">
    <property name="source" value="${basedir}/src"/>
    <property name="target" value="${basedir}/build"/>
    <target name="clean">
        <delete dir="${target}"/>
        <mkdir dir="${target}"/>
    </target>
    <target name="compile" depends="copy-resources">
        <javac srcdir="${source}"
               destdir="${target}"
               debug="on"
               includeantruntime="last">
        </javac>
    </target>
    <target name="copy-resources">
        <copy todir="${target}">
            <fileset dir="${source}">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="run" depends="compile">
        <java classname="AnimatedGraph" fork="true">
            <classpath path="${target}"/>
        </java>
        <java classname="SimpleGraph" fork="true">
            <classpath path="${target}"/>
        </java>
    </target>
</project>